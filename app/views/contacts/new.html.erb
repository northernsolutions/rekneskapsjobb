<%= render 'shared/header' %>
<page id="contacts_new">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
      	<%= form_for @contact do |f| %>
      		<%= f.label :name %><br>
      		<%= f.text_field :name, required: true, class:"form-control input-lg" %>

      		<br>

      		<%= f.label :email %><br>
      		<%= f.email_field :email, required: true, class:"form-control input-lg" %>

      		<br>

      		<%= f.label :message %><br>
      		<%= f.text_area :message, as: :text, class:"form-control input-lg" %>

      		<div class="hidden">
      			<%= f.label :nickname %><br>
      			<%= f.text_field :nickname, hint: 'leave this field blank' %>
      		</div>

      		<%= f.submit 'Send Message', class: "button", class:"btn btn-lg" %>
      	<% end %>
      </div>
    </div>
  </div>
</page>

<% if @job.exclusive %>
<style>
  .navbar {
    display:none;
  }

  .navbar-top {
    display:none;
  }
</style>
<% end %>

<%= render 'shared/header' %>

<page id="jobs_show">
  <div class="test" style="background:#fff;min-height:100vh;">
  <% if @job.exclusive %>
    <div class="container" style="background:#fff;min-height:100vh;box-shadow:0 0 5px rgba(0,0,0,0.1) !important;">
      <div class="row">
        <div class="col-md-12">
          <div class="ad-top" style="padding-top:12px;padding-bottom:48px;">
            <div class="pull-left">
              <%= link_to "Gå tilbake", root_path, class:"btn btn-lg btn-default", style:"color:#424242;border-color:#fafafa;background:#fafafa;border-radius:0px;" %>
            </div>
            <div class="pull-right">
              <!-- <button class="btn btn-lg btn-default" data-toggle="modal" data-target="#myModal" style="background:#FFC107;color:#fff;border-color:#FFC107;border-radius:0px;">Søk nå</button> -->
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="ad">
            <div class="row">
              <div class="col-md-12">
                <%= image_tag @job.employer.header, class:"thumbnail", style:"margin-bottom:24px !important;" %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-2 col-xs-6">
                <div class="row">
                  <div class="col-md-12">
                    <div class="ad-logo">
                      <%= image_tag @job.employer.logo, class:"thumbnail", style:"margin-bottom:24px;" %>
                    </div>
                    <% if @job.employer.profile %>
                      <div class="ad-employer-profile">
                        <%= link_to "Vise Bedriftsprofil", employer_path, class:"btn btn-lg btn-default", style:"background:#424242;color:#fff;border-color:#424242;border-radius:0px;width:100%;margin-bottom:12px;" %>
                      </div>
                      <div class="apply">
                        <button class="btn btn-lg btn-default" data-toggle="modal" data-target="#myModal" style="background:#FFC107;color:#424242 !important;border-color:#FFC107;border-radius:0px;margin-bottom:24px;width:100%;">Søk nå</button>
                      </div>
                    <% end %>
                    <div class="ad-info" style="background:#fafafa;padding:12px;margin-bottom:24px;">
                      <p class="bold">Arbeidssted</p>
                      <p><%= @job.location %></p>
                      <p class="bold">Type</p>
                      <p><%= @job.type.name %></p>
                      <p class="bold">Kategori</p>
                      <p><%= @job.category.name %></p>
                      <p class="bold">Søknadsfrist</p>
                      <p><%= @job.date %></p>
                      <p class="bold">Registrert</p>
                      <p><%= @job.published_at %></p>
                      <p class="bold">Antal stillinger</p>
                      <p style="margin-bottom:0px !important;"><%= @job.number %></p>
                    </div>
                    <div class="share" style="margin-bottom:24px;">
                      <p class="bold">Dela gärna via:</p>
                      <i class="fa fa-facebook-square" aria-hidden="true" style="font-size:40px;color:#3b5998;"></i> &nbsp; <i class="fa fa-twitter-square" aria-hidden="true" style="font-size:40px;color:#15a7ff;"></i> &nbsp; <i class="fa fa-linkedin-square" aria-hidden="true" style="font-size:40px;color:#0077b5;"></i> &nbsp; <i class="fa fa-google-plus-square" aria-hidden="true" style="font-size:40px;color:#d34836;"></i> &nbsp; <i class="fa fa-envelope" aria-hidden="true" style="font-size:40px;color:#4CAF50;"></i>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-10 col-xs-12">
                <div class="row">
                  <div class="col-md-12">
                    <div class="ad-header" style="margin-bottom:24px;">
                      <h4 class="bold" style="color:#656565;"><%= @job.employer.name %> søker</h4>
                      <h2 class="bold" style="margin-bottom:0px !important;"><%= @job.title %></h2>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="ad-content">
                      <div class="ad-content" style="margin-bottom:24px;">
                        <%= @job.content.html_safe %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="ad-apply">
                      <button class="btn btn-lg btn-default" data-toggle="modal" data-target="#myModal" style="background:#FFC107;color:#fff;border-color:#FFC107;border-radius:0px;margin-bottom:24px;width:100%;">Søk nå</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>

  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <% @banners.each do |banner| %>
          <%= image_tag banner.left, class:"thumbnail", style:"margin-top:12px !important;" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-12">
            <div class="ad-top" style="padding-top:12px;padding-bottom:48px;margin-bottom:24px;">
              <div class="pull-left">
                <%= link_to "Gå tilbake", root_path, class:"btn btn-lg btn-default", style:"color:#424242;border-color:#fafafa;background:#fafafa;border-radius:0px;" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="ad">
              <div class="row">
                <div class="col-md-3 col-xs-12">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="ad-logo">
                        <%= image_tag @job.employer.logo, class:"thumbnail", style:"margin-bottom:24px;" %>
                      </div>
                      <% if @job.employer.profile %>
                        <div class="ad-employer-profile">
                          <%= link_to "Vise Bedriftsprofil", employer_path, class:"btn btn-lg btn-default", style:"background:#424242;color:#fff;border-color:#424242;border-radius:0px;width:100%;margin-bottom:12px;" %>
                        </div>
                      <% end %>
                      <div class="ad-info" style="background:#fafafa;padding:12px;margin-bottom:24px;">
                        <p class="bold">Arbeidssted</p>
                        <p><%= @job.location %></p>
                        <p class="bold">Type</p>
                        <p><%= @job.type.name %></p>
                        <p class="bold">Kategori</p>
                        <p><%= @job.category.name %></p>
                        <p class="bold">Søknadsfrist</p>
                        <p><%= @job.date %></p>
                        <p class="bold">Registrert</p>
                        <p><%= @job.published_at %></p>
                        <p class="bold">Antal stillinger</p>
                        <p style="margin-bottom:0px !important;"><%= @job.number %></p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-9 col-xs-12">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="ad-header" style="margin-bottom:24px;">
                        <h4 class="bold" style="color:#656565;"><%= @job.employer.name %> søker</h4>
                        <h2 class="bold" style="margin-bottom:0px !important;"><%= @job.title %></h2>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="ad-content">
                        <div class="ad-content" style="margin-bottom:24px;">
                          <%= @job.content.html_safe %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="ad-apply">
                        <button class="btn btn-lg btn-default" data-toggle="modal" data-target="#myModal" style="background:#FFC107;color:#424242 !important;border-color:#FFC107;border-radius:0px;margin-bottom:24px;width:100%;">Søk nå</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <% @banners.each do |banner| %>
          <%= image_tag banner.right, class:"thumbnail", style:"margin-top:12px !important;" %>
        <% end %>
      </div>
    </div>
  </div>






  <% end %>
  </div>
</page>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Søk nå</h4>
      </div>
      <div class="modal-body">
        <%= @job.apply.html_safe %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Lukk</button>
      </div>
    </div>
  </div>
</div>

<style>
  .input-lg {
    font-size:13px;
    box-shadow:none;
    border:1px solid #f5f5f5;
    border-radius: 3px;
  }
</style>

<div class="find-form">
    <%= form_for Find.new do |f| %>
      <div class="form-group">
        <label>Namn</label>
        <%= f.text_field :name, required: true, class:"form-control input-lg" %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, required: true, class:"form-control input-lg" %>
      </div>
      <div class="form-group">
        <label>Telefonnummer</label>
        <%= f.text_field :phone, required: true, class:"form-control input-lg" %>
      </div>
      <div class="form-group">
        <label>CV</label>
        <%= f.file_field :cv %>
      </div>
      <div class="form-group">
        <label>Personlig brev</label>
        <%= f.file_field :letter %>
      </div>
      <div class="form-group">
        <label>Berätta om vad du söker</label>
        <%= f.text_area :message, as: :text, class:"form-control input-lg" %>
      </div>

        <div class="hidden">
            <%= f.label :nickname %><br>
            <%= f.text_field :nickname, hint: 'leave this field blank' %>
        </div>
      <div class="form-group">
        <%= f.submit 'Registrera', class: "btn btn-lg", style:"width:100%;background:#FFC107;border-color:#FFC107;font-size:14px;font-weight:500;border-radius:3px;" %>
      </div>

      <div class="form-group">
        <p class="center bold">Du som bruker vår webbapplikasjon er bundet til våre Integritetspolicy samt vår cookie policy og brukervilkår.</p>
      </div>
    <% end %>
</div>
